<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#fe6a7f"
        android:layout_alignParentTop="true">
        <ImageButton
            android:id="@+id/et_search"
            android:layout_width="267dp"
            android:layout_height="27dp"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/search" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/follow"
        android:layout_below="@id/re1"
        android:layout_width="match_parent"
        android:layout_height="106dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
    <ListView
        android:id="@+id/list_article"
        android:layout_below="@id/follow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@null"
        android:fadingEdge="none"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:dividerHeight="13dp"
       >
    </ListView>
    <LinearLayout
        android:id="@+id/bot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <LinearLayout
            android:id="@+id/index"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@mipmap/index"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="首页"
                android:textSize="12dp"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fabu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@mipmap/release"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="发布"
                android:textSize="12dp"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@mipmap/follow_this"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="关注"
                android:textSize="12dp"
                android:textColor="#fe6a7f"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@mipmap/my"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="我的"
                android:textSize="12dp"
                android:textColor="#999999"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
