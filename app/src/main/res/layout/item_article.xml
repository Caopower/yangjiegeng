<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:layout_marginBottom="13dp"
    android:background="@drawable/gonggao_radius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <demo.com.AvatarImageView
            android:id="@+id/head"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="7dp"
            android:src="@mipmap/pic"/>
        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="3dp"
            android:textSize="12sp"
            android:text="洋桔梗"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textSize="12dp"
            android:text="06:12"
            android:layout_marginTop="13dp"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何画好看又清新的眼妆?"
            android:layout_marginLeft="7dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="7dp"
            android:text="夏天到了，一个清爽的妆容为女孩子加分不少尤其是眼妆，清新水灵的眼妆谁不爱。"
            android:textSize="12sp" />
        <TextView

            android:layout_width="100dp"
            android:layout_height="64dp"
            android:background="#000"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        >

        <LinearLayout
            android:id="@+id/like"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/article_like" />

            <TextView
                android:id="@+id/like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="603"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/article_comment" />

            <TextView
                android:id="@+id/comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="603"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/collection"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/article_collection"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/collection_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="603"
                android:textSize="12sp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
