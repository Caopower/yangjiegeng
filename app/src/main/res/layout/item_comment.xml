<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white">
        <demo.com.tool.AvatarImageView
            android:id="@+id/commentimg"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_height="40dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/commenttit"
            android:layout_toRightOf="@id/commentimg"
            android:layout_marginLeft="13dp"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/commentcov"
            android:layout_toRightOf="@id/commentimg"
            android:layout_below="@id/commenttit"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="13dp"
            android:textSize="10sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/commentcov2"
            android:layout_toRightOf="@id/commentimg"
            android:layout_below="@id/commentcov"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="13dp"
            android:textSize="7sp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/commentdel"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:layout_width="15dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/comment"
            android:layout_height="15dp" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textSize="10sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="8dp" />
    </RelativeLayout>
</RelativeLayout>
