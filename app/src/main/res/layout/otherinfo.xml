<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">//别的博主信息
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="25dp"
        android:background="@mipmap/otherinfobac">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:id="@+id/imgback">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />
        </RelativeLayout>
        <demo.com.AvatarImageView
            android:id="@+id/otherinfo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@mipmap/pic"/>
        <TextView
            android:id="@+id/oterinfoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="洋桔梗"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:layout_below="@id/otherinfo"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/otherqianming"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:layout_below="@id/oterinfoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="这个人很懒，什么都没留下"
            android:textColor="@android:color/white"/>
        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_below="@id/otherqianming">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注：9"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="粉丝：9"
                android:textSize="12sp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>